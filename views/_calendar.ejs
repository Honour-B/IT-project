  <!-- Modal -->
  <div class="modal fade" id="logModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <form method="POST" action="/calendar" class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalDate">Log Entry</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" name="log_id" id="logId">
          <input type="hidden" name="date" id="logDate">
          <textarea name="log_text" class="form-control" id="logText" rows="4" required></textarea>
