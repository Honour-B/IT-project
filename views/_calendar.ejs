  <title>Calendar Log</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #e9f5ff, #ffffff);
      padding: 2em;
      font-family: 'Segoe UI', sans-serif;
      color: #333;
    }

    .back-btn {
      margin-bottom: 20px;
      padding: 10px 20px;
      background-color: #0d6efd;
      color: #fff;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 500;
      display: inline-block;
      transition: background-color 0.3s ease;
    }

    .back-btn:hover {
      background-color: #084298;
    }

    .calendar-grid {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 12px;
      max-width: 900px;
      margin: 0 auto;
    }

    .day-box {
      background-color: #ffffff;
      border: 1px solid #dee2e6;
      border-radius: 10px;
      padding: 15px 10px;
      min-height: 100px;
      text-align: center;
      font-weight: 500;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
      cursor: pointer;
      position: relative;
      transition: all 0.3s ease;
    }

    .day-box:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
      background-color: #f1faff;
    }

    /* State styles */
    .submitted {
      background-color: #d1e7dd !important;
      border-left: 5px solid #198754;
    }

    .missed {
      background-color: #f8d7da !important;
      border-left: 5px solid #dc3545;
    }

    .future {
      background-color: #fefefe !important;
      opacity: 0.85;
    }

    /* Today highlight */
    .today {
      border: 2px solid #0d6efd !important;
      box-shadow: 0 0 0 3px #cfe2ff;
    }

    .calendar-container {
      background-color: #ffffff;
      border-radius: 15px;
      padding: 30px;
      max-width: 960px;
      margin: 0 auto;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.07);
      border: 1px solid #dee2e6;
    }

    .day-box {
      padding: 10px;
      border-radius: 6px;
      border: 1px solid #ccc;
      text-align: center;
      cursor: pointer;
      transition: 0.3s;
    }

    .day-box.submitted {
      background-color: #d1e7dd !important;
      /* green */
      border: 2px solid #0f5132;
      /* optional green border */
      color: #0f5132;
    }

    .day-box.missed {
      background-color: #f8d7da !important;
      /* red */
    }

    .day-box.future {
      background-color: #f0f0f0 !important;
      /* white-ish */
    }

    .day-box.today {
      border: 2px solid #0d6efd;
      /* just outline, no background override */
    }

    .btn-home {
      background-color: #0d6efd;
      color: white;
      padding: 10px 18px;
      border-radius: 8px;
      font-weight: 500;
      text-decoration: none;
      display: inline-block;
      margin-bottom: 20px;
    }

    .btn-home:hover {
      background-color: #084298;
    }

    .day-box.disabled {
      pointer-events: none;
      opacity: 0.6;
      cursor: not-allowed;
    }

    .day-box.invisible {
      visibility: hidden;
      pointer-events: none;
    }
  </style>
</head>

