  <!DOCTYPE html>
  <html>
  <head>
    <title>View Logs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
      body {
        background-color: #f8fafc;
        font-family: 'Segoe UI', sans-serif;
        padding: 30px;
        margin: 0;
      }
      .header {
        text-align: center;
        margin-bottom: 40px;
      }
      .header h1 {
        font-size: 2.8rem;
        font-weight: 700;
        color: #1e3a8a;
      }
      .btn-home {
        background-color: #0d6efd;
        color: white;
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: 500;
        text-decoration: none;
        margin-bottom: 20px;
        display: inline-block;
      }
      .btn-home:hover { background-color: #084298; }
      .week-section {
        margin-bottom: 40px;
        background: #fff;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
      }
      .week-section h5 { font-weight: 600; margin-bottom: 20px; color: #1e3a8a; }
      .log-row { display: flex; gap: 20px; flex-wrap: wrap; }
      .log-card {
        flex: 1; min-width: 220px; max-width: 280px;
        background: #f9fafb; border-radius: 10px;
        padding: 15px; box-shadow: 0 2px 8px rgba(0,0,0,0.06);
      }
      .log-body { font-size: 0.95rem; color: #374151; white-space: pre-wrap; }
      .edit-btn { background-color: #1e40af; color: white; padding: 6px 14px; border-radius: 6px; text-decoration: none; font-size: 14px; }
      .edit-btn:hover { background-color: #1e3a8a; }
      .edit-disabled { color: #9ca3af; cursor: not-allowed; padding-left: 10px; }
      .pagination { display: flex; justify-content: center; gap: 12px; margin-top: 20px; flex-wrap: wrap; }
      .page-btn { background-color: #007bff; color: white; padding: 8px 16px; border-radius: 6px; text-decoration: none; font-weight: 500; }
      .page-btn:hover { background-color: #0056b3; transform: scale(1.05); }
    </style>
  </head>
  <body>

    <div class="header">
      <h1>ðŸ“„ Logs for <%= matric_num %></h1>
      <p>Your submitted internship logs are displayed below.</p>
    </div>

    <div class="text-center mb-4">
      <a href="/submit-log" class="btn-home">
        <i class="fas fa-arrow-left"></i> Home
      </a>
    </div>
<% allWeeks.forEach((week) => {
    const weekStart = new Date(week.start);
    const weekEnd = new Date(week.end);
    const key = weekStart.toDateString();
    const logs = logMap[key] || [];

 const itStart = new Date(itStartDate);
const startDay = itStart.getDay();
if (startDay !== 1) {
  const diff = (startDay === 0 ? -6 : 1 - startDay);
  itStart.setDate(itStart.getDate() + diff); // align to Monday
}
const weekNumber = Math.floor((weekStart - itStart) / (7 * 24 * 60 * 60 * 1000)) + 1;

%>

<div class="week-section">
  <h5>Week <%= weekNumber %>: <%= weekStart.toDateString() %> - <%= weekEnd.toDateString() %></h5>

  <% if (logs.length > 0) { %>
    <div class="log-row">
      <% logs.forEach(log => {
          const logDate = new Date(log.date);
          const isPastDay = logDate < today;
          const canEdit = week.isCurrentWeek && isPastDay;
      %>
        <div class="log-card">
          <strong><%= logDate.toDateString() %></strong>
          <p class="log-body"><%= log.log_text %></p>

          <div class="mt-2">
            <strong>Supervisor's Remark:</strong><br>
            <%- log.sup_remark ? log.sup_remark : "<em>No remark yet</em>" %>
          </div>

          <div class="mt-2">
            <% if (canEdit) { %>
              <a href="/edit-log/<%= log.log_id %>" class="edit-btn"><i class="fas fa-edit"></i> Edit</a>
            <% } else { %>
              <span class="edit-disabled"><i class="fas fa-lock"></i> Edit</span>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="text-muted"><i>No logs submitted for this week.</i></p>
  <% } %>
</div>

<% }) %>


<!-- Pagination OUTSIDE the week loop -->
<div class="pagination">
  <% if (currentPage > 1) { %>
    <a href="/view-logs?page=<%= currentPage - 1 %>" class="page-btn">&laquo; Prev</a>
  <% } %>

  <% for(let i = 1; i <= totalPages; i++) { %>
    <a href="/view-logs?page=<%= i %>" class="page-btn <%= i === currentPage ? 'fw-bold' : '' %>">
      <%= i %>
    </a>
  <% } %>

  <% if (currentPage < totalPages) { %>
    <a href="/view-logs?page=<%= currentPage + 1 %>" class="page-btn">Next &raquo;</a>
  <% } %>
</div>

  
  </body>
  </html>
